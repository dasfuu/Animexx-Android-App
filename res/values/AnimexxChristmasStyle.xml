<?xml version="1.0" encoding="utf-8"?>
<resources>

    <color name="Christmas_theme_color">#FFABAC</color>
    <color name="header_bg_Christmas">#D53D29</color>


    <style name="AnimexxChristmasStyle" parent="Theme.Sherlock.Light.DarkActionBar">
        <item name="android:windowBackground">@color/Christmas_theme_color</item>
        <item name="android:colorBackground">@color/Christmas_theme_color</item>
        <item name="android:buttonStyle">@style/ButtonTextChristmas</item>
        <item name="android:alertDialogStyle">@style/CustomDialogThemeChristmas</item>
        <item name="android:dialogTheme">@style/CustomDialogThemeChristmas</item>
    </style>

    <style name="ButtonTextChristmas" parent="@android:style/Widget.Button">
        <item name="android:textColor">#000000</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/mexx_christmas_button</item>
    </style>

    <style name="ButtonImageChristmas" parent="@android:style/Widget.ImageButton">
        <item name="android:textColor">#000000</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@drawable/mexx_christmas_button</item>
    </style>

    <style name="CustomDialogThemeChristmas" parent="@android:style/Theme.Dialog">
        <item name="android:bottomBright">@color/Christmas_theme_color</item>
        <item name="android:bottomDark">@color/Christmas_theme_color</item>
        <item name="android:bottomMedium">@color/Christmas_theme_color</item>
        <item name="android:centerBright">@color/Christmas_theme_color</item>
        <item name="android:centerDark">@color/Christmas_theme_color</item>
        <item name="android:centerMedium">@color/Christmas_theme_color</item>
        <item name="android:fullBright">@color/Christmas_theme_color</item>
        <item name="android:fullDark">@color/Christmas_theme_color</item>
        <item name="android:topBright">@color/header_bg_Christmas</item>
        <item name="android:topDark">@color/header_bg_Christmas</item>
    </style>

</resources>